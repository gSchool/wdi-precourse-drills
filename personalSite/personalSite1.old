  <div class="content">

    <!-- set up a header bar for previous me -->
    <div class="headerBar">
      <h3>Previous Me</h3>
    </div>

    <!-- set up content for previous me section -->
    <div>
      <table class="contentTable">
        <tr>
          <td>I grew up in North Carolina.</td>
          <td>
            <div class='tableCellDiv'>
              <img src="site_images/NC.png" alt="">
            </div>
          </td>
        </tr>
        <tr>
          <td>I got my BS in Computer Science and English from Duke.</td>
          <td>
            <div class='tableCellDiv'>
              <img src="site_images/Duke_logo.jpg" alt="">
            </div>
          </td>
        </tr>
